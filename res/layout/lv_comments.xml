<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
        <LinearLayout
            android:layout_marginTop="@dimen/list_item_margintop"
            android:layout_marginBottom="@dimen/list_item_marginbottom"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" >

                <ImageButton
                	android:layout_span="2"
                    android:id="@+id/com_avatar"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:src="@android:drawable/btn_star" />
            
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/com_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:text="name"
                    android:textColor="@color/headerft"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/com_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:text="count"
                    android:textColor="@color/headerft"
                    android:textSize="16sp" />

            </TableRow>
        </TableLayout>
        </LinearLayout>


</LinearLayout>
