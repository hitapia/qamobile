<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/list_item_marginbottom"
    android:layout_marginTop="@dimen/list_item_margintop"
    android:orientation="vertical"
   	android:background="@drawable/bg_card"
    android:padding="@dimen/padd_5" >

    <TextView
        android:id="@+id/qlist_name"
        android:text="this is a test message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padd_5"
        android:singleLine="true"
        android:focusable="false"
        android:ellipsize="marquee"
        android:textSize="18sp" />

    <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:layout_marginTop="@dimen/padd_5"
	android:layout_marginBottom="@dimen/padd_5"
    android:layout_alignParentRight="true" 
    android:orientation="horizontal" >
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/ans_iscor"
                android:text="정답"
                android:padding="@dimen/padd_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp" 
                android:background="@color/dblue"  />
            <TextView
                android:id="@+id/regname"
                android:text="reguser"
                android:padding="@dimen/padd_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp" 
                android:background="@color/dgreen"  />
            </LinearLayout>
            <LinearLayout
                	android:layout_alignParentRight="true" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:id="@+id/txtcor1"
                        android:text=" O "
                        android:padding="@dimen/padd_5"
                        android:gravity="center"
                        android:layout_width="25dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp" 
                        android:background="@color/dblue" />
                    <TextView
                        android:id="@+id/txtcor"
                        android:text="30"
                        android:gravity="right"
                        android:padding="@dimen/padd_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dblue"
                        android:textSize="14sp" 
                        android:minWidth="30dip"
                        android:background="@drawable/blueborder" />
                    <View android:layout_height="1dip"
                        android:layout_width="5dip" />
                    <TextView
                        android:id="@+id/txtcor1"
                        android:text=" X "
                        android:gravity="center"
                        android:layout_width="25dip"
                        android:padding="@dimen/padd_5"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp" 
                        android:background="@color/dred" />
                    <TextView
                        android:id="@+id/txtincor"
                        android:layout_toRightOf="@id/txtcor"
                        android:text="O"
                        android:gravity="right"
                        android:padding="@dimen/padd_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dred"
                        android:minWidth="30dip"
                        android:textSize="14sp" 
                        android:background="@drawable/redborder" />
                
            </LinearLayout>
        
    </RelativeLayout>

</LinearLayout>
