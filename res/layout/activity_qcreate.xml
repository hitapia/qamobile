<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".QCreateActivity" >
<ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout 
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
    <TextView
        android:id="@+id/pinfo_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="@string/title_createq_basictop"
        android:textColor="@color/headerft"
        android:textSize="24sp" />

    <View
        android:id="@+id/ViewColorPickerHelper"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_margin="0dip"
        android:background="?android:attr/dividerVertical" />

    <EditText
        android:id="@+id/txtSummary"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:ems="10"
        android:hint="@string/title_createq_hint_title"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <View
        android:id="@+id/ViewColorPickerHelper"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_margin="0dip"
        android:background="?android:attr/dividerVertical" />
    
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dip"
    android:orientation="horizontal"
    android:padding="0dip" >
                    <EditText
                        android:id="@+id/qitem1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/title_createq_item_name"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/headerft"
                        android:textSize="20sp" />

    <View
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:layout_margin="0dip"
        android:background="?android:attr/dividerVertical" />

                    <ToggleButton
                        android:id="@+id/tgl1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="오답"
                        android:textOn="정답" />

        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dip"
    android:orientation="horizontal"
    android:padding="0dip" >
                    <EditText
                        android:id="@+id/qitem2"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/title_createq_item_name"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/headerft"
                        android:textSize="20sp" />

    <View
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:layout_margin="0dip"
        android:background="?android:attr/dividerVertical" />

                    <ToggleButton
                        android:id="@+id/tgl2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOn="정답"
                        android:textOff="오답"/>

        </LinearLayout>
        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dip"
    android:orientation="horizontal"
    android:padding="0dip" >
                    <EditText
                        android:id="@+id/qitem3"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/title_createq_item_name"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/headerft"
                        android:textSize="20sp" />

    <View
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:layout_margin="0dip"
        android:background="?android:attr/dividerVertical" />

                    <ToggleButton
                        android:id="@+id/tgl3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOn="정답"
                        android:textOff="오답"/>

        </LinearLayout>
         <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dip"
    android:orientation="horizontal"
    android:padding="0dip" >
                    <EditText
                        android:id="@+id/qitem4"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/title_createq_item_name"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/headerft"
                        android:textSize="20sp" />

    <View
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:layout_margin="0dip"
        android:background="?android:attr/dividerVertical" />

                    <ToggleButton
                        android:id="@+id/tgl4"
                        android:layout_gravity="top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOn="정답"
                        android:textOff="오답"/>

        </LinearLayout>
    <TextView
        android:id="@+id/pinfo_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_marginTop="20dip"
        android:text="@string/title_createq_cat"
        android:textColor="@color/headerft"
        android:textSize="24sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_margin="0dip"
        android:background="?android:attr/dividerVertical" />

         <Spinner
             android:id="@+id/cboCategory"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pinfo_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_marginTop="20dip"
        android:text="@string/title_createq_diff"
        android:textColor="@color/headerft"
        android:textSize="24sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_margin="0dip"
        android:background="?android:attr/dividerVertical" />

         <SeekBar
             android:id="@+id/sbDiff"
             android:max="4"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />
         
         
    <TextView
        android:id="@+id/pinfo_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_marginTop="20dip"
        android:text="@string/title_createq_item_desc"
        android:textColor="@color/headerft"
        android:textSize="24sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_margin="0dip"
        android:background="?android:attr/dividerVertical" />
         
<EditText
        android:id="@+id/txtcom"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:hint="@string/title_createq_com_place"
        android:ems="10"
        android:inputType="textMultiLine" />
<EditText
        android:id="@+id/txthint"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:hint="@string/title_createq_hint_place"
        android:ems="10"
        android:inputType="textMultiLine" />
<EditText
        android:id="@+id/txttags"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title_createq_tag_place"
        android:layout_alignParentLeft="true"
        android:textColor="@color/headerft"
        android:textSize="20sp" />

<View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="10dip"
        android:background="?android:attr/dividerVertical" />
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dip"
    android:orientation="horizontal"
    android:padding="0dip" >
<View
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:layout_margin="0dip"
        android:background="?android:attr/dividerVertical" />
    <Button
        android:id="@+id/btn_createnext"
        android:layout_width="0dip"
        android:layout_height="60dip"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/txt_createnext" />
<View
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:layout_margin="0dip"
        android:background="?android:attr/dividerVertical" />
    <Button
        android:id="@+id/btn_create"
        android:layout_width="0dip"
        android:layout_height="60dip"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/txt_create" />
<View
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:layout_margin="0dip"
        android:background="?android:attr/dividerVertical" />

</LinearLayout>
<View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_margin="0dip"
        android:background="?android:attr/dividerVertical" />

</LinearLayout>
</ScrollView>
</LinearLayout>