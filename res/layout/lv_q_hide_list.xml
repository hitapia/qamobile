<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/list_item_marginbottom"
    android:layout_marginTop="@dimen/list_item_margintop"
    android:orientation="vertical"
   	android:background="@drawable/bg_card"
    android:padding="@dimen/padd_5" >

    <TextView
        android:id="@+id/summary"
        android:text="this is a test message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:focusable="false"
        android:ellipsize="marquee"
        android:textSize="20sp" />

    <RelativeLayout 
    android:layout_marginTop="@dimen/padd_5"
    android:layout_marginBottom="@dimen/padd_5"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
    				android:orientation="horizontal" >
            <TextView
                android:id="@+id/txtpanme"
                android:gravity="center"
                android:padding="@dimen/padd_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp" 
                android:background="@color/lblue" />

            </LinearLayout>
            <LinearLayout
                	android:layout_alignParentRight="true" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:id="@+id/txtcor1"
                        android:text="@string/title_qmain_myavg"
                        android:gravity="center"
                        android:padding="@dimen/padd_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp" 
                        android:background="@color/actionbar" />
                    <TextView
                        android:id="@+id/txtavg"
                        android:text="30"
                        android:gravity="right"
                        android:padding="@dimen/padd_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dblue"
                        android:textSize="14sp" 
                        android:minWidth="30dip"
                        android:background="@drawable/maincolorborder" />
                    <View android:layout_height="1dip"
                        android:layout_width="5dip" />
            </LinearLayout>
        
    </RelativeLayout>

</LinearLayout>