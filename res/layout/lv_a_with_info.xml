<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/list_item_marginbottom"
    android:layout_marginTop="@dimen/list_item_margintop"
    android:orientation="vertical"
   	android:background="@drawable/bg_card"
    android:padding="@dimen/padd_5" >

    <TextView
        android:id="@+id/qsummary"
        android:text="this is a test message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padd_5"
        android:singleLine="true"
        android:focusable="false"
        android:ellipsize="marquee"
        android:textSize="18sp" />
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/ans_iscor"
                android:text="정답"
                android:padding="@dimen/padd_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp" 
                android:background="@color/dblue"  />
            <TextView
                android:id="@+id/aitem"
                android:text="item summary"
                android:padding="@dimen/padd_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:background="@drawable/blueborder" 
                android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:layout_marginTop="@dimen/padd_5"
	android:layout_marginBottom="@dimen/padd_5"
    android:layout_alignParentRight="true" 
    android:orientation="horizontal" >
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/regemail"
                android:text="reguser"
                android:padding="@dimen/padd_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp" 
                android:background="@color/dgreen"  />
            </LinearLayout>
            <LinearLayout
                	android:layout_alignParentRight="true" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:id="@+id/regdate"
                        android:text="O"
                        android:gravity="right"
                        android:padding="@dimen/padd_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:minWidth="30dip"
                        android:textSize="14sp" 
                        android:background="@color/dgreen" />
                
            </LinearLayout>
        
    </RelativeLayout>

</LinearLayout>
